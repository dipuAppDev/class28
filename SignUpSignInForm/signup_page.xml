<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/signUpPageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_page"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile_img"
        android:id="@+id/profileImg"
        app:layout_constraintTop_toBottomOf="@id/signUpPageTV"
        app:layout_constraintStart_toStartOf="@id/signUpPageTV"
        app:layout_constraintEnd_toEndOf="@id/signUpPageTV"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/roundedImage"
        app:strokeWidth="10dp"
        android:padding="15dp"
        app:strokeColor="#131313"
        />
    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintEnd_toEndOf="@id/profileImg"
        app:layout_constraintBottom_toBottomOf="@id/profileImg"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        app:tint="@color/white"
        android:padding="12dp"
        android:background="@drawable/profile_camera_bg"
        android:id="@+id/signUpCameraV"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userNameContainer"
        app:layout_constraintTop_toBottomOf="@id/profileImg"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        app:startIconDrawable="@drawable/ic_person"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userNameET"
            android:hint="Username"
            android:inputType="text"
            android:drawablePadding="5dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailContainer"
        app:layout_constraintTop_toBottomOf="@id/userNameContainer"
        app:layout_constraintStart_toStartOf="@id/userNameContainer"
        app:layout_constraintEnd_toEndOf="@id/userNameContainer"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        app:startIconDrawable="@drawable/ic_email"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:id="@+id/emailET"
            android:inputType="textEmailAddress"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passContainer"
        app:layout_constraintTop_toBottomOf="@id/emailContainer"
        app:layout_constraintStart_toStartOf="@id/emailContainer"
        app:layout_constraintEnd_toEndOf="@id/emailContainer"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/ic_password"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:id="@+id/passET"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ageContainer"
        app:layout_constraintTop_toBottomOf="@id/passContainer"
        app:layout_constraintStart_toStartOf="@id/passContainer"
        app:layout_constraintEnd_toEndOf="@id/passContainer"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        app:startIconDrawable="@drawable/ic_age"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ageET"
            android:hint="Age"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addressContainer"
        app:layout_constraintTop_toBottomOf="@id/ageContainer"
        app:layout_constraintStart_toStartOf="@id/ageContainer"
        app:layout_constraintEnd_toEndOf="@id/ageContainer"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        app:startIconDrawable="@drawable/ic_address"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:id="@+id/addressET"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="20sp"
        android:fontFamily="@font/poppins"
        android:paddingHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/addressContainer"
        app:layout_constraintStart_toStartOf="@id/addressContainer"
        app:layout_constraintEnd_toEndOf="@id/addressContainer"
        android:layout_marginTop="20dp"
        android:id="@+id/submitBtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>